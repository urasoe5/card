<% content_for :title do %>
  カード一覧
<% end %>

<div class="box">
  <div class="box-header with-border">
    <div class="pull-left">
    </div>
    <div class="pull-right">
      <%= link_to new_admin_oracle_card_path, { class: "btn btn-default btn-sm" } do %>
        <i class="fa fa-plus"></i>
        新規作成
      <% end %>
    </div>
  </div>
  <div class="box-body table-responsive">
    <table class="table table-borderd table-hover">
      <thead>
        <tr>
          <th class="col-sm-1">ID</th>
          <th class="col-sm-2"><%= t("activerecord.attributes.oracle_card.image") %></th>
          <th class="col-sm-1"><%= t("activerecord.attributes.oracle_card.title") %></th>
          <th class="col-sm-3"><%= t("activerecord.attributes.oracle_card.description") %></th>
          <th class="col-sm-3"><%= t("activerecord.attributes.oracle_card.helper_description") %></th>
          <th class="col-sm-2"></th>
        </tr>
      </thead>

      <%= render @oracle_cards %>
    </table>
  </div>
</div>
